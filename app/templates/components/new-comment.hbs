<div class="well">
    <h4>Leave a Comment:</h4>
    <form>
        <div class="form-group">
          {{input value=author class="form-control" id="author"}}
        </div>
        <div class="form-group">
            {{textarea class="form-control" rows="3" value=body id="body"}}
        </div>
        <button {{action 'saveComment'}} class="btn btn-primary">Submit</button>
    </form>
</div>
