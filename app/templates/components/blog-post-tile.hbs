<article class="col-md-6">
    {{#link-to 'post' post.id}}<figure class="col-lg-12">
        <img class="img img-responsive article-img" src={{post.url}}>
        <figcaption class="article-caption"><h1 class="article-title"><a href="">{{post.title}}</a></h1>
        </figcaption>
    </figure>{{/link-to}}
    <div class="article-intro col-lg-12" style="padding-top: 10px;">
      {{#if post.tooLong}}
        <strong>{{post.bodyShort}}....</strong>
      {{else}}
        <strong>{{post.body}}</strong>
      {{/if}}
    </div>

</article>
