{{#each model.comments as |comment|}}
  <div class="media">
    <a class="pull-left" href="#">
      <img class="media-object" src="http://placehold.it/64x64"/>
    </a>
    <div class="media-body">
      <h4 class="media-heading">{{comment.author}}
        <small>{{comment.date}}</small>
      </h4>
      {{comment.body}}
    </div>
  </div>
{{/each}}
