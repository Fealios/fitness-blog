{{#if addNewPost}}
  <form class="" action="index.html" method="post">
    <div class="form-group">
      <label for="title">Title:</label>
      {{input value=title id="title" class="form-control"}}
    </div>
    <div class="form-group">
      <label for="author"></label>
      {{input value=author id="author" class="form-control"}}
    </div>
    <div class="form-group">
      {{textarea value=body id="body" class="form-control"}}
    </div>
    <div class="form-group">
      {{input value=url id="url" class="form-control"}}
    </div>
    <button {{action 'savePost'}} name="button">Save Post</button>
  </form>
{{else}}
<button {{action 'postFormShow'}}>New Post</button>
{{/if}}
